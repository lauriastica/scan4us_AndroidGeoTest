<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent" android:gravity="center"
    android:layout_height="match_parent">

    <LinearLayout android:layout_weight="0.3"
        android:layout_width="match_parent" android:gravity="center"
        android:layout_height="match_parent">

        <ImageView android:src="@drawable/p01_logo"
            android:layout_width="210dp"
            android:layout_height="180dp" />

    </LinearLayout>

    <LinearLayout android:layout_weight="0.3"
        android:layout_width="match_parent" android:gravity="center"
        android:layout_height="match_parent">

        <ImageView android:src="@drawable/p01_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout android:layout_weight="0.3"
        android:layout_width="match_parent" android:gravity="center"
        android:layout_height="match_parent">

        <ImageView android:src="@drawable/p01_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>