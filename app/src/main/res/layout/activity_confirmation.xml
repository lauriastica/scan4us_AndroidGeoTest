<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:layout_weight="0.5"
        android:layout_width="match_parent" android:gravity="center"
        android:layout_height="match_parent">

        <ImageView android:src="@drawable/p01_logo"
            android:layout_width="210dp"
            android:layout_height="180dp" />

    </LinearLayout>

    <LinearLayout android:gravity="center"
        android:layout_width="match_parent" android:layout_weight="0.5"
        android:layout_height="match_parent">

        <TextView android:text="We've sent you a mail to
confirm your account, go to your
inbox and click on the provided
linl"
            android:textSize="24sp"
            android:textColor="@color/gen_texts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout android:layout_weight="0.5" android:gravity="center"
        android:layout_width="match_parent" android:orientation="vertical"
        android:layout_height="match_parent">

        <Button android:text="Got it"  android:background="@drawable/p02_ge_selector"
            android:layout_width="wrap_content"
            android:textColor="@color/md_white"
            android:layout_height="wrap_content" />

        <LinearLayout android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView android:text="Already have an account?"
                android:layout_width="wrap_content" android:textColor="@color/md_blue_500"
                android:layout_height="wrap_content" />

            <TextView android:text="Log in" android:layout_marginLeft="5dp"
                android:clickable="true"
                android:layout_width="wrap_content" android:textColor="@color/md_blue_600"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>