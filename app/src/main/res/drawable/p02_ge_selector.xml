<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <gradient android:angle="-90" android:startColor="@color/md_blue_600" android:endColor="@color/md_blue_600"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="@color/light_gray" />
            <solid android:color="@color/light_gray"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <gradient android:angle="-90" android:startColor="@color/md_blue_500" android:endColor="@color/md_blue_500" />
        </shape>
    </item>
</selector>